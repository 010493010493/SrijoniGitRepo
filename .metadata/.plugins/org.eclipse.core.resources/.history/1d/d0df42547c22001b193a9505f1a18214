package com.ibm.currencyconvertservice.converter;

import com.ibm.currencyconvertservice.dto.CurrencyDTO;
import com.ibm.currencyconvertservice.entity.Currency;

public class CurrencyConverter {
	
public Currency convertToEntity(CurrencyDTO dto) {
		
	Currency currency = new Currency();
	currency.setId(dto.getId());
	currency.setCountryCode(dto.getCountryCode());
	currency.setConversionFactor(dto.getConversionFactor());
		
		return currency;
	}

public Currency convertToEntityForUpdate(CurrencyDTO dto, Long id) {
	
	Currency currency = new Currency();
	currency.setIdid);
	currency.setCountryCode(dto.getCountryCode());
	currency.setConversionFactor(dto.getConversionFactor());
		
		return currency;
	}

}
